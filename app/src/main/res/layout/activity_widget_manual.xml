<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/alert_dialog_horizontal_margin"
    android:paddingTop="@dimen/alert_dialog_vertical_margin"
    android:paddingRight="@dimen/alert_dialog_horizontal_margin">>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widgetTitleCont"
        android:padding="2dp"
        android:background="@color/colorAccent"></FrameLayout>
    <include
        layout="@layout/link"
        android:layout_width="180dp"
        android:layout_height="34dp"
        android:id="@+id/titleClickDesc"
        android:layout_alignLeft="@+id/widgetTitleCont"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="30dp"
        android:layout_alignTop="@+id/widgetTitleCont" />
    <include
        android:layout_width="230dp"
        android:layout_height="76dp"
        layout="@layout/link"
        android:id="@+id/modeClickDesc"
        android:layout_alignLeft="@+id/widgetTitleCont"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="30dp"
        android:layout_alignTop="@+id/widgetTitleCont" />



    <include
        layout="@layout/link"
        android:layout_width="180dp"
        android:layout_height="31dp"
        android:id="@+id/noteClickDesc"
        android:layout_alignLeft="@+id/widgetTitleCont"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="106dp"
        android:layout_alignTop="@+id/widgetTitleCont" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widgetConfigCont"
        android:padding="2dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/widgetTitleCont"
        android:layout_marginTop="16dp">

    </FrameLayout>

    <include
        layout="@layout/link"
        android:layout_width="230dp"
        android:layout_height="160dp"
        android:id="@+id/modeClickDesc2"
        android:layout_alignLeft="@+id/widgetConfigCont"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:layout_alignTop="@+id/widgetConfigCont" />

    <include
        layout="@layout/link"
        android:layout_width="205dp"
        android:layout_height="118dp"
        android:id="@+id/incClickDesc"
        android:layout_alignLeft="@+id/widgetConfigCont"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="30dp"
        android:layout_alignTop="@+id/widgetConfigCont" />

    <include
        layout="@layout/link"
        android:layout_width="181dp"
        android:layout_height="76dp"
        android:id="@+id/decClickDesc"
        android:layout_alignLeft="@+id/widgetConfigCont"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="30dp"
        android:layout_alignTop="@+id/widgetConfigCont" />

    <include
        layout="@layout/link"
        android:layout_width="156dp"
        android:layout_height="34dp"
        android:id="@+id/themeSwitchClickDesc"
        android:layout_alignLeft="@+id/widgetConfigCont"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="30dp"
        android:layout_alignTop="@+id/widgetConfigCont" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/do_not_show_again"
        android:id="@+id/checkBox"
        android:checked="false"
        android:layout_below="@+id/widgetConfigCont"
        android:layout_marginTop="14dp" />

</RelativeLayout>
</ScrollView>